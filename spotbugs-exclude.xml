<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude generated code -->
    <Match>
        <Source name="~.*[\\/]target[\\/].*"/>
    </Match>

    <!-- Exclude test files -->
    <Match>
        <Source name="~.*Test\.java"/>
    </Match>
    <Match>
        <Source name="~.*Test\.kt"/>
    </Match>

    <!-- Exclude configuration classes -->
    <Match>
        <Class name="~.*Config"/>
    </Match>

    <!-- Exclude DTO classes -->
    <Match>
        <Package name="~.*\.dto"/>
    </Match>

    <!-- Exclude entity classes -->
    <Match>
        <Package name="~.*\.entity"/>
    </Match>

    <!-- Exclude main application class -->
    <Match>
        <Class name="~.*Main.*"/>
    </Match>

    <!-- Exclude specific bug patterns that are not relevant -->
    <Match>
        <Bug pattern="SE_BAD_FIELD"/>
    </Match>

    <Match>
        <Bug pattern="EI_EXPOSE_REP"/>
    </Match>

    <Match>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>
</FindBugsFilter>